<h1>Add new subject</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Name of subject</label>
    <span class="helper-text" data-error="Write name"></span>
  </div>

  <div class="input-field">
    <input id="teacher" name="teacher" type="text" class="validate" required>
    <label for="teacher">Teacher of course</label>
    <span class="helper-text" data-error="Write teacher"></span>
  </div>

  <div class="input-field">
    <input id="shortName" name="shortName" type="text" class="validate" required>
    <label for="shortName">Short name of course</label>
    <span class="helper-text" data-error="Write short name"></span>
  </div>

  <button class="btn btn-primary">Add</button>
</form>